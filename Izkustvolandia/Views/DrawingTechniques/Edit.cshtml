@using Izkustvolandia.Domain
@model Izkustvolandia.Models.DrawingTechniqueViewModel

@{
    ViewData["Title"] = "Редакция на техника";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h3 class="text-center text-primary mb-4">
                        ✏️ Редактирай техника на рисуване
                    </h3>

                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="DrawingTechniqueId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Име на техниката</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="All" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save2"></i> Запази промените
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
