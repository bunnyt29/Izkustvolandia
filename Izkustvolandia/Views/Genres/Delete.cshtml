@model Izkustvolandia.Domain.Genre

@{
    ViewData["Title"] = "Изтриване";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h3 class="text-center text-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill"></i> Сигурни ли сте, че искате да изтриете жанра?
                    </h3>

                    <div class="mb-4 text-center">
                        <h5 class="fw-bold">Жанр:</h5>
                        <p class="fs-5">@Model.Name</p>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="GenreId" />
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Назад
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i> Изтрий
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
