@model List<Izkustvolandia.Models.Orders.OrderDetailsOutputModel>

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Всички поръчки</h1>
                    <ol class="breadcrumb">
                        <li>Администрация</li>
                        <li class="active">Поръчки</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="user-dashboard page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="dashboard-wrapper user-dashboard">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Име</th>
                                <th>Тел. номер</th>
                                <th>Адрес</th>
                                <th>Дата на поръчване</th>
                                <th>Дата на доставка</th>
                                <th>Общо</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.User?.Name</td>
                                    <td>@order.PhoneNumber</td>
                                    <td>@order.Address</td>
                                    <td>@order.CreatedOn</td>
                                    <td>@order.DeliveryOn</td>
                                    <td>@order.TotalSum лв.</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>