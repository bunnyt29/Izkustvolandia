@model List<Izkustvolandia.Models.Users.UserDetailsViewModel>

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Потребители</h1>
                    <ol class="breadcrumb">
                        <li>Администрация</li>
                        <li class="active">Потребители</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="page-wrapper">
    <div class="container">
        <a asp-action="Add">Добави</a>
        <div class="row">
            <div class="col-md-12">
                <div class="contact-messages">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Име</th>
                            <th>Имейл</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <div class="post-options" style="display: flex; justify-content: space-between">
                                        <form method="get" asp-action="Edit" asp-route-id="@user.UserId">
                                            <button type="submit" class="btn btn-info">Редактирай</button>
                                        </form> 

                                        <form method="post" asp-action="Delete" asp-route-id="@user.UserId">
                                            <button type="submit" class="btn btn-danger">X</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>