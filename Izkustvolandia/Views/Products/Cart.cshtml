@using Izkustvolandia.Domain
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Izkustvolandia.Models.Products.DetailsProductViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Количка</h1>

<p>
    <a asp-action="Create">Количка</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Width)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DrawingTechniques)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img style="width: 80px; height: 80px" src="~/Images/@item.ImageUrl" alt="">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @String.Join(", ", @item.Genres.Select(g => g.Name))
            </td>
            <td>
                @String.Join(", ", @item.DrawingTechniques.Select(dt => dt.Name))
            </td>
            <td>
                <a class="btn btn-danger" asp-action="RemoveFromCart" asp-route-id="@item.ProductId">X</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="row">
    <a class="btn btn-danger" asp-controller="Orders" asp-action="Overview">Поръчай</a>
</div>