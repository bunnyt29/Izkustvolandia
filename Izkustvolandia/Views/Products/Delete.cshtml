@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Izkustvolandia.Domain.Product

@{
    ViewData["Title"] = "Изтриване на продукт";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-trash3-fill"></i> Изтриване на продукт</h4>
                    <span class="fw-bold">ID: @Model.ProductId</span>
                </div>
                <div class="card-body">
                    <p class="lead text-center text-danger mb-4">
                        Сигурни ли сте, че искате да изтриете този продукт?
                    </p>

                    <div class="text-center mb-4">
                        <img src="~/Image/product-images/@Model.ImageUrls.FirstOrDefault()" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" alt="@Model.Name" />
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Заглавие</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Описание</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Автор</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3">Размер</dt>
                        <dd class="col-sm-9">@Model.Width см x @Model.Height см</dd>

                        <dt class="col-sm-3">Цена</dt>
                        <dd class="col-sm-9">@Model.Price лв.</dd>

                        <dt class="col-sm-3">Създаден на</dt>
                        <dd class="col-sm-9">@Model.CreatedOn.ToString("dd.MM.yyyy")</dd>

                        <dt class="col-sm-3">Изтрит?</dt>
                        <dd class="col-sm-9">@((Model.IsDeleted) ? "Да" : "Не")</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="All" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Назад към списъка
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Потвърди изтриването
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
