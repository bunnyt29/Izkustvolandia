@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Izkustvolandia.Areas.Identity.Pages.Account.LoginModel


<!-- Breadcrumb Area Start -->
<div class="breadcrumb-area bg-image-3 ptb-150">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h3>ВХОД</h3>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Начало</a></li>
                <li class="active">Вход</li>
            </ul>
        </div>
    </div>
</div>
<!-- Breadcrumb Area End -->
<div class="login-register-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-toggle="tab" href="#lg1">
                            <h4> Вход </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form id="account" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                        
                                        <label asp-for="Input.Email" class="form-label">Имейл</label>
                                        <input asp-for="Input.Email" aria-required="true" placeholder="ivan.ivanov@gmail.com"/>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        <br/>

                                        <label asp-for="Input.Password" class="form-label">Парола</label>
                                        <input asp-for="Input.Password" aria-required="true" placeholder="Парола"/>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        <p>
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Нямаш профил? <span class="theme-color">Регистрирай се!</span></a>
                                        </p>
                                        <div class="button-box">
                                            <button id="login-submit" type="submit"><span>Вход</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}